@model CustomerModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-5">
    <div class="card w-75 m-auto">
        <div class="card-header">
            <h2 class="card-title">Customer Details</h2>
        </div>
        <div class="card-body">
            <div class="form-group mb-2">
                <label asp-for="Name">Name</label>
                <div class="form-control">@Model.Name</div>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email">Email</label>
                <div class="form-control">@Model.Email</div>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Address">Address</label>
                <div class="form-control">@Model.Address</div>
            </div>
            <div class="form-group">
                <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary me-1">Edit</a>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
