
@{
    Layout = null;
    var userData = (QuestionPaperDataFirstApp.Models.User)Session["UserData"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Score</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            width: 100%;
            height: 100%;
            box-sizing: border-box;
            background-color: rgb(0, 148, 255, 0.7);
        }

        .box {
            position: absolute;
            width: 350px;
            height: 280px;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
        }
    </style>
</head>
<body>
    <div class="box" style="display: flex; flex-direction: column; align-items: center; justify-content: space-between; padding: 40px;">
        <h2>
            Your Score
        </h2>
        <h1>
            @ViewBag.Score
        </h1>
        @Html.ActionLink("Goto Exam Lists", "ExamHistory", new {id = userData.id}, new {@class = "btn btn-primary"})
    </div>
</body>
</html>
