@* @model IEnumerable<Core_CRUD_App.Models.Student> *@
@model List<StudentModel>

@{
	ViewData["Title"] = "Index";
	int idx = 1;
}

<div style="display: flex; justify-content: space-between; align-items: start;" class="mt-4">
	<h3 class="mb-3">List of Students</h3>
	<p>
		<a asp-action="Create" class="btn px-3 py-2 my-btn">Add New Student</a>
	</p>
</div>

<table class="table table-striped bg-white">
	<thead>
		<tr>
			<th>Sr. No</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Age</th>
			<th>Email</th>
			<th>Password</th>
			<th>Gender</th>
			<th>Action</th>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>@idx</td>
			<td>@item.Fname</td>
			<td>@item.Lname</td>
			<td>@item.Age</td>
			<td>@item.Email</td>
			<td>@item.Password</td>
			<td>@item.Gender</td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary px-4 me-1">Edit</a>
				<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary px-4 me-1">Details</a>
				<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger px-4">Delete</a>
			</td>
		</tr>
		idx++;
	}
</table>