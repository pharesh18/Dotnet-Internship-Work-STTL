@model ProductModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="card w-75 m-auto">
        <div class="card-header">
            <h2 class="card-title">Product Details</h2>
        </div>
        <div class="card-body">
            <div class="form-group mb-2">
                <label asp-for="Name">Name</label>
                <div class="form-control">@Model.Name</div>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Description">Description</label>
                <div class="form-control">@Model.Description</div>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Price">Price</label>
                <div class="form-control">$@Model.Price</div>
            </div>
            <div class="form-group mb-4">
                <label asp-for="StockQuantity">Stock Quantity</label>
                <div class="form-control">@Model.StockQuantity</div>
            </div>
            <div class="form-group">
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary me-1">Edit</a>
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
