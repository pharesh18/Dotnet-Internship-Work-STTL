@model CustomerModel

@{
	ViewData["Title"] = "Create New Customer";
}

<div class="container mt-5">
	<div class="card w-75 m-auto">
		<div class="card-header">
			<h2 class="card-title">Create New Customer</h2>
		</div>
		<div class="card-body">
			<form asp-action="Create" method="post">
				<div class="form-group mb-2">
					<label asp-for="Name">Name</label>
					<input asp-for="Name" class="form-control" required />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group mb-2">
					<label asp-for="Email">Email</label>
					<input asp-for="Email" class="form-control" required />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group mb-4">
					<label asp-for="Address">Address</label>
					<input asp-for="Address" class="form-control" required />
					<span asp-validation-for="Address" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary me-1">Create</button>
					<a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>


