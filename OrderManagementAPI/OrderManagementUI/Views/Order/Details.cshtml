@model OrderModel

@{
	ViewData["Title"] = "Order Details";
	var customerDetails = ViewBag.CustomerDetails;
}

<div class="container mt-5">
	<div class="card w-75 m-auto">
		<div class="card-header">
			<h2 class="card-title">Order Details</h2>
		</div>
		<div class="card-body">
			<div class="form-group mb-2">
				<label asp-for="CustomerId">Customer ID</label>
				<div class="form-control">@Model.CustomerId</div>
			</div>
			@if (customerDetails != null)
			{
				<div class="form-group mb-2">
					<label asp-for="CustomerId">Customer Name</label>
					<div class="form-control">@customerDetails.Name</div>
				</div>
				<div class="form-group mb-2">
					<label asp-for="CustomerId">Customer Email</label>
					<div class="form-control">@customerDetails.Email</div>
				</div>
			}
			<div class="form-group mb-2">
				<label asp-for="OrderDate">Order Date</label>
				<div class="form-control">@Model.OrderDate</div>
			</div>
			<div class="form-group mb-2">
				<label asp-for="TotalAmount">Total Amount</label>
				<div class="form-control">@Model.TotalAmount</div>
			</div>
			<div class="form-group mb-4">
				<label asp-for="Status">Status</label>
				<div class="form-control">@Model.Status</div>
			</div>
			<div class="form-group">
				<a asp-controller="Order" asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-primary me-1">Edit</a>
				<a asp-controller="Order" asp-action="Index" class="btn btn-secondary">Back to List</a>
			</div>
		</div>
	</div>
</div>
